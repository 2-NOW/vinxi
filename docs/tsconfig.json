{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"paths": {
			"@/components/*": ["./app/components/*"],
			"@/lib/*": ["./app/lib/*"],
			"next/*": ["./app/next/*"]
		},
		"types": ["react/experimental"],
		"isolatedModules": true
	}
}
