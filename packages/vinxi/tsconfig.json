{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"checkJs": true,
		"noEmit": true,
		"isolatedModules": true
	},
	"include": ["lib", "runtime"]
}
