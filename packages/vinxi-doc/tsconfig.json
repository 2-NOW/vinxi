{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"jsx": "react-jsx",
		"strict": false,
		"checkJs": true,
		"noEmit": false,
		"isolatedModules": true,
		"declarationMap": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"emitDeclarationOnly": true,
		"declaration": true,
		"outDir": "dist"
	},
	"include": ["doc.js"]
}
